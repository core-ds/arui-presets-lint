{
    "name": "arui-presets-lint",
    "version": "8.0.0-beta.12",
    "description": "Config files for arui-apps",
    "author": "core-ds contributors",
    "license": "MIT",
    "bin": "./cli/index.mjs",
    "dependencies": {
        "@alfalab/stylelint-core-vars": "1.6.0",
        "@commitlint/cli": "18.4.4",
        "@commitlint/config-conventional": "18.4.4",
        "@typescript-eslint/eslint-plugin": "7.18.0",
        "@typescript-eslint/parser": "7.18.0",
        "eslint": "8.57.0",
        "eslint-config-airbnb": "19.0.4",
        "eslint-config-airbnb-typescript": "18.0.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-import-resolver-typescript": "3.6.3",
        "eslint-plugin-cypress": "3.5.0",
        "eslint-plugin-dirnames": "1.0.3",
        "eslint-plugin-import": "2.30.0",
        "eslint-plugin-jsx-a11y": "6.10.0",
        "eslint-plugin-react": "7.36.1",
        "eslint-plugin-react-hooks": "4.6.2",
        "eslint-plugin-simple-import-sort": "12.1.1",
        "eslint-plugin-unicorn": "55.0.0",
        "execa": "9.4.1",
        "kebab-case": "1.0.0",
        "lefthook": "1.8.1",
        "prettier": "3.3.3",
        "stylelint": "16.10.0"
    },
    "engines": {
        "node": ">=18.12.0"
    },
    "devDependencies": {
        "@alfalab/core-components": "47.20.0",
        "@semantic-release/changelog": "6.0.3",
        "@semantic-release/commit-analyzer": "11.1.0",
        "@semantic-release/git": "10.0.1",
        "@semantic-release/github": "9.2.6",
        "@semantic-release/npm": "11.0.2",
        "@semantic-release/release-notes-generator": "12.1.0",
        "react": "18.3.1",
        "semantic-release": "22.0.12",
        "typescript": "5.5.4"
    },
    "scripts": {
        "test": "yarn lint:scripts && eslint-config-prettier ./eslint/index.js && yarn lint:styles && yarn format:check",
        "lint": "yarn lint:styles && yarn lint:scripts && yarn format:check",
        "lint:fix": "yarn lint:styles --fix && yarn lint:scripts --fix && yarn format",
        "lint:styles": "node ./cli/index.mjs styles",
        "lint:scripts": "node ./cli/index.mjs scripts",
        "format": "node ./cli/index.mjs format",
        "format:check": "node ./cli/index.mjs format:check"
    },
    "prettier": "./prettier",
    "stylelint": {
        "extends": "./stylelint"
    },
    "eslintConfig": {
        "extends": "./eslint",
        "rules": {
            "import/no-extraneous-dependencies": [
                "error",
                {
                    "devDependencies": [
                        "test/**/*"
                    ]
                }
            ]
        }
    },
    "commitlint": {
        "extends": "./commitlint"
    },
    "packageManager": "yarn@4.5.1"
}
