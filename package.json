{
    "name": "arui-presets-lint",
    "version": "8.8.1",
    "description": "Config files for arui-apps",
    "author": "core-ds contributors",
    "license": "MIT",
    "type": "module",
    "bin": "./cli/index.mjs",
    "dependencies": {
        "@alfalab/stylelint-core-vars": "2.0.0",
        "@commitlint/cli": "19.8.1",
        "@commitlint/config-conventional": "19.8.1",
        "@eslint/js": "9.37.0",
        "@types/eslint-plugin-jsx-a11y": "6.10.0",
        "@typescript-eslint/utils": "8.45.0",
        "eslint": "9.37.0",
        "eslint-config-flat-gitignore": "2.1.0",
        "eslint-import-resolver-typescript": "4.4.4",
        "eslint-plugin-check-file": "3.3.0",
        "eslint-plugin-import-x": "4.16.1",
        "eslint-plugin-jsx-a11y": "6.10.2",
        "eslint-plugin-n": "17.23.1",
        "eslint-plugin-react": "7.37.5",
        "eslint-plugin-react-hooks": "5.2.0",
        "eslint-plugin-simple-import-sort": "12.1.1",
        "eslint-plugin-unicorn": "61.0.2",
        "execa": "^9.6.0",
        "globals": "^16.4.0",
        "jiti": "^2.6.1",
        "lefthook": "1.13.6",
        "prettier": "3.6.2",
        "stylelint": "16.25.0",
        "typescript-eslint": "8.45.0"
    },
    "engines": {
        "node": ">=18.18.0"
    },
    "devDependencies": {
        "@alfalab/core-components": "49.7.0",
        "@changesets/changelog-github": "0.5.1",
        "@changesets/cli": "2.29.7",
        "@types/node": "24.6.2",
        "@types/react": "18.3.24",
        "es-toolkit": "1.39.10",
        "eslint-config-prettier": "10.1.8",
        "react": "18.3.1",
        "tsx": "4.20.6",
        "typescript": "5.9.3"
    },
    "scripts": {
        "test": "eslint-config-prettier ./eslint/index.ts && tsx ./cli/duplicates-checker.ts && yarn lint",
        "lint": "yarn lint:styles && yarn lint:scripts && yarn format:check",
        "lint:fix": "yarn lint:styles --fix && yarn lint:scripts --fix && yarn format",
        "lint:styles": "node ./cli/index.mjs styles",
        "lint:scripts": "node ./cli/index.mjs scripts",
        "format": "node ./cli/index.mjs format",
        "format:check": "node ./cli/index.mjs format:check",
        "release": "changeset publish",
        "release:snapshot": "changeset publish --tag snapshot --no-git-tag",
        "version-package": "changeset version",
        "version-package:snapshot": "changeset version --snapshot snapshot"
    },
    "prettier": "./prettier",
    "stylelint": {
        "extends": "./stylelint"
    },
    "exports": {
        "./eslint": "./eslint/index.ts",
        "./eslint/config": "./eslint/config.ts",
        "./eslint/best-practices": "./eslint/best-practices.ts",
        "./eslint/imports": "./eslint/imports.ts",
        "./eslint/node": "./eslint/node.ts",
        "./eslint/react-a11y": "./eslint/react-a11y.ts",
        "./eslint/react": "./eslint/react.ts",
        "./eslint/tests": "./eslint/tests.ts",
        "./eslint/typescript": "./eslint/typescript.ts",
        "./eslint/variables": "./eslint/variables.ts",
        "./prettier": "./prettier/index.js",
        "./commitlint": "./commitlint/index.js",
        "./stylelint": "./stylelint/index.js"
    },
    "commitlint": {
        "extends": "./commitlint"
    },
    "packageManager": "yarn@4.10.3"
}
